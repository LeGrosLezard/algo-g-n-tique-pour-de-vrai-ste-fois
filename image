import matplotlib.pyplot as plt
import numpy as np
from PIL import Image
import cv2

from operation import *



R = cv2.RETR_TREE
P = cv2.CHAIN_APPROX_NONE


image = 'images/ligne.jpg'
img = open_picture(image)
#img = cv2.resize(img, (50,50))

edges = cv2.Canny(img, 255,200)
blanck = blanck_picture(img)

contours, _ = cv2.findContours(edges, R, P)
for cnts in contours:
    cv2.fillPoly(blanck, pts =[cnts], color=(255, 255, 255))


liste_horizontaleX = []
liste_horizontaleY = []

liste_verticaleX = []
liste_verticaleY = []

blanck = cv2.cvtColor(blanck, cv2.COLOR_BGR2GRAY)
kernel = np.ones((3,3),np.uint8)
blanck = cv2.erode(blanck, kernel, iterations = 1)



liste_x = []
liste_y = []

for x in range(blanck.shape[0]):
    for y in range(blanck.shape[1]):

 
        if blanck[x, y] == 255:
            liste_y.append(y)


    liste_horizontaleX.append(liste_y)
    liste_y = []



for nb, i in enumerate(liste_horizontaleX):
    if i != []:
        print(nb, i)
        print("")












show_picture("blanck", blanck, 0, "")






















